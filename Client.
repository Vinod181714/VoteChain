'use client';

import { useParams, useRouter } from 'next/navigation';
import { useState } from 'react';
import { useElections, useAuth } from '@/lib/hooks';
import { AppLayout } from '@/components/app-layout';
import { Card, CardContent, CardHeader, CardTitle, CardDescription, CardFooter } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { RadioGroup, RadioGroupItem } from '@/components/ui/radio-group';
import { Label } from '@/components/ui/label';
import { Alert, AlertDescription, AlertTitle } from '@/components/ui/alert';
import { Hand, Loader2, ShieldCheck, ArrowLeft } from 'lucide-react';
import { useToast } from '@/hooks/use-toast';
import Link from 'next/link';

export default function ElectionPage() {
  const { id } = useParams();
  const router = useRouter();
  const { elections, castVote } = useElections();
  const { user } = useAuth();
  const { toast } = useToast();

  const [selectedCandidate, setSelectedCandidate] = useState<number | null>(null);
  const [isSubmitting, setIsSubmitting] = useState(false);

  const election = elections.find((e) => e.id === id);

  if (!election) {
    return (
      <AppLayout>
        <div className="text-center">
          <h1 className="text-2xl font-bold">Election not found</h1>
          <p className="text-muted-foreground">The election you are looking for does not exist.</p>
          <Button asChild className="mt-4">
            <Link href="/">Go to Dashboard</Link>
          </Button>
        </div>
      </AppLayout>
    );
  }

  const hasVoted = user ? election.voted.includes(user.voterId) : false;

  const handleSubmitVote = () => {
    if (!user || selectedCandidate === null) return;

    setIsSubmitting(true);
    // Simulate blockchain transaction delay
    setTimeout(() => {
      const success = castVote(election.id, selectedCandidate, user.voterId);
      if (success) {
        toast({
          title: 'Vote Cast Successfully!',
          description: 'Your vote has been recorded on the blockchain.',
        });
        router.push(`/election/${election.id}/results`);
      }
      setIsSubmitting(false);
    }, 1500);
  };
  
  return (
    <AppLayout>
      <div className="max-w-2xl mx-auto">
        <Button variant="ghost" asChild className="mb-4">
            <Link href="/"><ArrowLeft className="mr-2 h-4 w-4"/> Back to Elections</Link>
        </Button>
        <Card>
          <CardHeader>
            <CardTitle className="text-3xl">{election.name}</CardTitle>
            <CardDescription>Select a candidate and cast your vote.</CardDescription>
          </CardHeader>
          <CardContent className="space-y-6">
            {hasVoted ? (
                <Alert variant="default" className="bg-green-50 border-green-200 dark:bg-green-950 dark:border-green-800">
                    <ShieldCheck className="h-4 w-4 text-green-600" />
                    <AlertTitle className="text-green-700 dark:text-green-400">Vote Confirmed</AlertTitle>
                    <AlertDescription className="text-green-600 dark:text-green-500">
                    You have already cast your vote in this election. Your choice is secured on the blockchain.
                    </AlertDescription>
              </Alert>
            ) : (
            <RadioGroup
              onValueChange={(value) => setSelectedCandidate(parseInt(value))}
              disabled={hasVoted || isSubmitting}
            >
              {election.candidates.map((candidate) => (
                <Label
                  key={candidate.id}
                  htmlFor={String(candidate.id)}
                  className="flex items-center justify-between p-4 border rounded-lg cursor-pointer hover:bg-accent hover:text-accent-foreground has-[:checked]:bg-primary has-[:checked]:text-primary-foreground has-[:checked]:border-primary"
                >
                  <span className="text-lg font-medium">{candidate.name}</span>
                  <RadioGroupItem value={String(candidate.id)} id={String(candidate.id)} />
                </Label>
              ))}
            </RadioGroup>
            )}
          </CardContent>
          <CardFooter>
            <Button
              className="w-full"
              size="lg"
              disabled={!selectedCandidate || hasVoted || isSubmitting}
              onClick={handleSubmitVote}
            >
              {isSubmitting && <Loader2 className="mr-2 h-4 w-4 animate-spin" />}
              {hasVoted ? 'You Have Voted' : 'Submit Secure Vote'}
            </Button>
          </CardFooter>
        </Card>
      </div>
    </AppLayout>
  );
}

'use client';

import { useParams } from 'next/navigation';
import Link from 'next/link';
import { useElections } from '@/lib/hooks';
import { AppLayout } from '@/components/app-layout';
import { ResultsChart } from '@/components/results-chart';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from '@/components/ui/table';
import { Button } from '@/components/ui/button';
import { ArrowLeft, ShieldCheck, Users } from 'lucide-react';

export default function ResultsPage() {
  const { id } = useParams();
  const { elections } = useElections();
  const election = elections.find((e) => e.id === id);

  if (!election) {
    return (
      <AppLayout>
        <div className="text-center">
          <h1 className="text-2xl font-bold">Election not found</h1>
        </div>
      </AppLayout>
    );
  }

  const totalVotes = election.candidates.reduce((sum, c) => sum + c.votes, 0);

  return (
    <AppLayout>
        <div className="space-y-8">
            <div>
                <Button variant="ghost" asChild className="mb-4">
                    <Link href="/"><ArrowLeft className="mr-2 h-4 w-4"/> Back to Elections</Link>
                </Button>
                <h1 className="text-3xl font-bold tracking-tight">{election.name} - Results</h1>
                <p className="text-muted-foreground flex items-center gap-2 mt-2">
                <ShieldCheck className="w-4 h-4 text-primary" />
                These results are immutable and transparently recorded on the blockchain.
                </p>
            </div>
            <div className="grid gap-8 md:grid-cols-3">
                <Card className="md:col-span-2">
                    <CardHeader>
                        <CardTitle>Vote Distribution</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <ResultsChart data={election.candidates} />
                    </CardContent>
                </Card>
                <div className="space-y-8">
                <Card>
                    <CardHeader className="flex flex-row items-center justify-between pb-2">
                        <CardTitle className="text-sm font-medium">Total Votes Cast</CardTitle>
                        <Users className="h-4 w-4 text-muted-foreground" />
                    </CardHeader>
                    <CardContent>
                        <div className="text-2xl font-bold">{totalVotes.toLocaleString()}</div>
                        <p className="text-xs text-muted-foreground">across all candidates</p>
                    </CardContent>
                </Card>
                 <Card>
                    <CardHeader>
                        <CardTitle>Vote Summary</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <Table>
                        <TableHeader>
                            <TableRow>
                            <TableHead>Candidate</TableHead>
                            <TableHead className="text-right">Votes</TableHead>
                            </TableRow>
                        </TableHeader>
                        <TableBody>
                            {election.candidates.sort((a,b) => b.votes - a.votes).map((candidate) => (
                            <TableRow key={candidate.id}>
                                <TableCell className="font-medium">{candidate.name}</TableCell>
                                <TableCell className="text-right">{candidate.votes.toLocaleString()}</TableCell>
                            </TableRow>
                            ))}
                        </TableBody>
                        </Table>
                    </CardContent>
                </Card>
                </div>
            </div>
        </div>
    </AppLayout>
  );
}
